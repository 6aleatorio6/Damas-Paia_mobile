    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-testing-library": "^6.3.0",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.4",
