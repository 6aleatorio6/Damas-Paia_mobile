    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/expo-env.d.ts",
      "!**/.expo/**"
    ],
    "testMatch": [
      "**/*-spec\\.[jt]s(x)?"
    ],
    "moduleNameMapper": {
      "tests/(.*)$": "<rootDir>/tests/$1"
    },
    "setupFilesAfterEnv": [
      "./tests/jest.setup.ts"
    ],
    "testTimeout": 10000
  }
